<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutEndianReverseDecimal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activities.EndianReverseDecimal"
    android:paddingLeft="20dp">
    <LinearLayout
        android:id="@+id/linearLayoutEndianReverseDecimalSupport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@xml/layout_border"
        android:padding="2dp"
        android:layout_margin="5dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/imageViewIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/text_no_mfc_support_device"
            android:src="@drawable/warning" />

        <TextView
            android:id="@+id/textEndianReverseDecimalErrorMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="@string/text_no_mfc_support_device"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/red" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollViewEndianReverseDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/linearLayoutEndianReverseDecimalSupport"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:id="@+id/linearLayoutEndianReverseDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textEndianReverseDecimalUID"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:autoSizeTextType="uniform"
        android:gravity="fill_vertical"
        android:rotation="0" />

</RelativeLayout>
